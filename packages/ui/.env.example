# Open Forge UI Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL (without trailing slash)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# GraphQL endpoint (if different from REST)
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8000/graphql

# WebSocket URL for real-time updates
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# =============================================================================
# Authentication
# =============================================================================

# Authentication provider (local, oauth, or saml)
NEXT_PUBLIC_AUTH_PROVIDER=local

# OAuth settings (if using OAuth)
# NEXT_PUBLIC_OAUTH_CLIENT_ID=your-client-id
# NEXT_PUBLIC_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AGENTS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# =============================================================================
# Application Settings
# =============================================================================

# Application name (shown in header/title)
NEXT_PUBLIC_APP_NAME=Open Forge

# Application URL (for metadata and callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Default page size for lists
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20

# =============================================================================
# Monitoring & Analytics (Optional)
# =============================================================================

# Error tracking (e.g., Sentry)
# NEXT_PUBLIC_SENTRY_DSN=

# Analytics (e.g., PostHog, Plausible)
# NEXT_PUBLIC_ANALYTICS_ID=

# =============================================================================
# Development Settings
# =============================================================================

# Enable React Query devtools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Mock API responses (for development without backend)
# NEXT_PUBLIC_USE_MOCK_API=false
